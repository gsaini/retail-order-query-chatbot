# Retail Order Query Chatbot Environment Variables
# Copy this file to .env and fill in your values

# =================================
# Application Settings
# =================================
APP_NAME=retail-chatbot
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =================================
# LLM Configuration
# =================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# =================================
# Vector Database (Product Search)
# =================================
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=products
PINECONE_ENVIRONMENT=us-west1-gcp

# Qdrant (alternative)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key

# =================================
# Database Configuration
# =================================
DATABASE_URL=postgresql://user:password@localhost:5432/retail_db
DATABASE_POOL_SIZE=10

# SQLite for development
# DATABASE_URL=sqlite:///./data/retail.db

# Redis for sessions
REDIS_URL=redis://localhost:6379/0

# =================================
# E-commerce Platform
# =================================
# Shopify
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_API_VERSION=2024-01

# WooCommerce (alternative)
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_KEY=your-consumer-key
WOOCOMMERCE_SECRET=your-consumer-secret

# =================================
# Shipping Integration
# =================================
EASYPOST_API_KEY=your-easypost-key
SHIPSTATION_API_KEY=your-shipstation-key
SHIPSTATION_API_SECRET=your-shipstation-secret

# =================================
# Payment Integration
# =================================
STRIPE_API_KEY=sk_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================
# Messaging Channels
# =================================
# WhatsApp
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Facebook Messenger
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-token
FACEBOOK_APP_SECRET=your-app-secret

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =================================
# Agent Configuration
# =================================
AGENT_MAX_ITERATIONS=15
AGENT_TIMEOUT_SECONDS=60
AGENT_VERBOSE=true

# =================================
# API Configuration
# =================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# =================================
# Session Configuration
# =================================
SESSION_TTL_HOURS=24
MAX_CONVERSATION_HISTORY=50
